@model ProductQuantityModel
@{
    ViewData["Title"] = "AddQuantity";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var total_quantities = 0;
    var key = 1;
}
<div class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Thêm số lượng sản phẩm</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-action="StoreProductQuantity" asp-controller="Product">
        <input type="hidden" name="ProductId" value="@ViewBag.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card-body">
            <div class="form-group">
                <label>Quantity</label>
                <input type="number" class="form-control" asp-for="Quantity" min="1" value="1" max="2000" placeholder="Enter quantity">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-success">
                Create
            </button>
        </div>
    </form>
    <h3>Exitsting Product Quantites:</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Quantity Added</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var productByQuantity in ViewBag.ProductByQuantity)
            {
                total_quantities += productByQuantity.Quantity;
                <tr>
                    <td>@key</td>
                    <td>@productByQuantity.Quantity</td>
                    <td>@productByQuantity.CreatedDate</td>
                </tr>
                key++;
            }
            <tr>
                <td>Total Quantities: @total_quantities</td>
            </tr>
        </tbody>
    </table>
    <div class="mt-3 d-flex justify-content-end">
        <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Product List
        </a>
    </div>
</div>
@section Js {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace( 'Description' );
    </script>
}

