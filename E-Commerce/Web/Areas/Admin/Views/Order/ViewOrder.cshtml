@model IEnumerable<OrderDetails>
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    decimal total = 0;
    decimal subTotal = 0;
    var firstItem = Model.FirstOrDefault();
}

<div class="invoice p-4 mb-4 border rounded shadow-sm">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary mb-3">
                <i class="fas fa-file-invoice-dollar"></i> Chi tiết đơn hàng
            </h2>
        </div>
    </div>

    <div class="row invoice-info">
        <div class="col-md-6">
            <h5>Thông tin khách hàng</h5>

            @*  @foreach (var item in ViewBag.OrderInfo)
            { *@
            <address>
                <strong>@firstItem.UserName</strong><br>
                Địa chỉ: @firstItem.Address<br>
                Điện thoại: @firstItem.Phone<br>
                Email: @firstItem.Email
            </address>
            @* } *@

        </div>
        <div class="col-md-6 text-md-right">
            <h5>Thông tin đơn hàng</h5>
            @foreach (var item in ViewBag.OrderInfo)
            {
                <p>
                    <b>Mã đơn hàng:</b> @item.OrderCode<br>
                    <b>Ngày tạo:</b> @item.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                </p>
            }
        </div>
    </div>

    <div class="table-responsive mt-4">
        <table class="table table-bordered table-striped">
            <thead class="thead-light">
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    subTotal = item.Quantity * item.Price;
                    total += subTotal;
                    <tr>
                        <input type="hidden" asp-for="@item.OrderCode" class="getId" />
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("#,##0 VNĐ")</td>
                        <td>@subTotal.ToString("#,##0 VNĐ")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <h5>Phương thức thanh toán</h5>
            <p>
                <img src="/assets/dist/img/credit/visa.png" alt="Visa" class="mr-2">
                <img src="/assets/dist/img/credit/mastercard.png" alt="Mastercard" class="mr-2">
                <img src="/assets/dist/img/credit/american-express.png" alt="American Express" class="mr-2">
                <img src="/assets/dist/img/credit/paypal2.png" alt="Paypal">
            </p>
            <p class="text-muted">
                Các phương thức thanh toán đa dạng và bảo mật tuyệt đối.
            </p>
        </div>
        <div class="col-md-6">
            <h5>Tổng thanh toán</h5>
            <table class="table">
                <tr>
                    <th>Tạm tính:</th>
                    <td>@total.ToString("#,##0 VNĐ")</td>
                </tr>
                <tr>
                    <th>Thuế (9.3%):</th>
                    <td>@((total * 0.093M).ToString("#,##0 VNĐ"))</td>
                </tr>
                <tr>
                    <th>Phí vận chuyển:</th>
                    @foreach (var item in ViewBag.OrderInfo)
                    {
                        <td>@item.ShippingFee.ToString("#,##0 VNĐ")</td>
                    }

                </tr>
                <tr class="font-weight-bold">
                    <th>Tổng cộng:</th>
                    <td>@((total + (total * 0.093M) + 50000).ToString("#,##0 VNĐ"))</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="row mt-4 no-print">
        <div class="col-md-12 text-right">
            <button class="btn btn-secondary">
                <i class="fas fa-print"></i> In hóa đơn
            </button>
            <button class="btn btn-success">
                <i class="fas fa-credit-card"></i> Thanh toán
            </button>

            @if (ViewBag.Status != 3)
            {
                <select class="form-control select-update-order d-inline-block w-auto ml-2">
                    <option value="0">Chưa xử lý</option>
                    <option value="1">Đã xử lý</option>
                </select>
            }

            <button class="btn btn-primary ml-2">
                <i class="fas fa-file-pdf"></i> Xuất PDF
            </button>
        </div>
    </div>
</div>

@section Css {
    <style>
        .invoice {
            background: #fff;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .btn {
            min-width: 120px;
        }
    </style>
}
@section Js {
    <script>
        $(document).ready(function(){
            $('.select-update-order').change(function(){
                var status= $(this).val();
                var orderCode=$('.getId').val();

                $.ajax({
                    type:'POST',
                    url:"@Url.Action("UpdateOrder","Order")",
                    data: {status:status,orderCode:orderCode},
                    success:function(result){
                        if (result.success){
                            Swal.fire("Cập nhật thành công");
                        } else {
                            Swal.fire("Cập nhật thất bại", result.message);
                        }
                    },
                    error: function(req, status, error){
                        console.error("Error updating order", error);
                    }
                });
            });
        });
    </script>
}
