@model ContactModel
@{
    ViewData["Title"] = "Edit Contact";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient bg-success text-white rounded-top-4 p-4">
            <h3 class="card-title mb-0 fw-bold">Cập nhật thông tin liên hệ</h3>
        </div>
        <form asp-action="Edit" asp-controller="Contact" enctype="multipart/form-data" class="p-4 bg-light rounded-bottom-4">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display: none;"></div>
            <div class="card-body">
                <!-- Title -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">Tiêu đề</label>
                    <input type="text" class="form-control form-control-lg border-0 shadow-sm" asp-for="Title" placeholder="Nhập tiêu đề">
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>
                <!-- Picture -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">Hình ảnh logo</label>
                    <div class="input-group">
                        <input type="file" class="form-control border-0 shadow-sm" asp-for="LogoImageUpload">
                    </div>
                    <span asp-validation-for="LogoImageUpload" class="text-danger small"></span>
                    <div class="mt-2">
                        <img src="/assets/images/contactImages/@Model.LogoImage" alt="@Model.Title" class="img-fluid rounded shadow-sm" style="max-width: 150px;" />
                    </div>
                </div>
                <!-- Map -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">Bản đồ</label>
                    <textarea class="form-control border-0 shadow-sm" asp-for="Map" rows="4" placeholder="Nhập mã nhúng bản đồ"></textarea>
                    <span asp-validation-for="Map" class="text-danger small"></span>
                </div>
                <!-- Phone -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">Số điện thoại</label>
                    <input type="text" class="form-control form-control-lg border-0 shadow-sm" asp-for="Phone" placeholder="Nhập số điện thoại">
                    <span asp-validation-for="Phone" class="text-danger small"></span>
                </div>
                <!-- Email -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email" class="form-control form-control-lg border-0 shadow-sm" asp-for="Email" placeholder="Nhập email">
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <!-- Description -->
                <div class="mb-4">
                    <label class="form-label fw-semibold">Mô tả</label>
                    <textarea class="form-control border-0 shadow-sm" asp-for="Description" rows="6" id="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
            </div>
            <div class="card-footer bg-light border-0 d-flex justify-content-between align-items-center p-4">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="fas fa-arrow-left me-2"></i> Quay lại danh sách
                </a>
                <button type="submit" class="btn btn-success btn-lg px-4">
                    <i class="fas fa-save me-2"></i> Cập nhật
                </button>
            </div>
        </form>
    </div>
</div>

@section Css {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
            }

        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.25) !important;
            border-color: #28a745 !important;
        }

        .btn-success {
            background: linear-gradient(45deg, #28a745, #34c759);
            border: none;
        }

            .btn-success:hover {
                background: linear-gradient(45deg, #218838, #2eb44e);
            }

        .form-label {
            color: #2c3e50;
        }
    </style>
}

@section Js {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        CKEDITOR.replace('Description', {
            height: 200,
            toolbar: 'Standard'
        });
    </script>
}