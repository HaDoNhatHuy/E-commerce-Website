@using Web.Models.VnPay
@model PaymentResponseModel
@{
    ViewData["Title"] = "Kết quả thanh toán qua VnPay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container my-5">
    <div class="payment-result">
        <div class="payment-status">
            <div class="checkmark-circle">
                <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                    <circle class="checkmark-circle-bg" cx="26" cy="26" r="25" fill="none"/>
                    <path class="checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
                </svg>
            </div>
        </div>
        
        <div class="result-header">
            <h1 class="result-title">Thanh toán thành công</h1>
            <p class="result-subtitle">Cảm ơn bạn đã sử dụng dịch vụ thanh toán của chúng tôi</p>
        </div>
        
        <div class="result-body">
            <div class="info-card">
                <div class="info-item">
                    <div class="info-label">
                        <i class="info-icon receipt"></i>
                        <span>Order ID</span>
                    </div>
                    <div class="info-value">@Model.OrderId</div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">
                        <i class="info-icon description"></i>
                        <span>Mô tả đơn hàng</span>
                    </div>
                    <div class="info-value">@Model.OrderDescription</div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">
                        <i class="info-icon payment"></i>
                        <span>Phương thức thanh toán</span>
                    </div>
                    <div class="info-value">@Model.PaymentMethod</div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">
                        <i class="info-icon transaction"></i>
                        <span>Mã giao dịch</span>
                    </div>
                    <div class="info-value">@Model.TransactionId</div>
                </div>
                
                <div class="info-item">
                    <div class="info-label">
                        <i class="info-icon confirmation"></i>
                        <span>Mã thanh toán</span>
                    </div>
                    <div class="info-value">@Model.PaymentId</div>
                </div>
            </div>
            
            <div class="receipt-footer">
                <div class="timestamp">
                    <i class="time-icon"></i>
                    <span>@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</span>
                </div>
            </div>
        </div>
        
        <div class="result-footer">
            <a asp-controller="Account" asp-action="History" class="btn-history">
                <span>Xem lịch sử đơn hàng</span>
                <i class="arrow-icon"></i>
            </a>
            <a href="/" class="btn-home">
                <span>Trở về trang chủ</span>
            </a>
        </div>
    </div>
</div>

@section Css{
    <link href="/backends/payment/vnPayStyle.css" rel="stylesheet" />
}